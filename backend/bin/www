const app = require('../app'); // 상위 폴더의 app.js를 가져옴
const http = require('http');
require('dotenv').config();

// 포트 설정: .env에 없으면 8080 사용
const port = process.env.PORT || '8080';
app.set('port', port); 

const server = http.createServer(app); // http 서버 생성

server.listen(port, () => {
    console.log(`스마트 화분 서버가 ${port}번 포트에서 가동 중입니다.`);
});